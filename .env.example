# FitMentor AI Environment Variables

# EmailOctopus API Configuration
EMAIL_OCTOPUS_API_KEY=your_api_key_here
EMAIL_OCTOPUS_LIST_ID=your_list_id_here

# API Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://fitmentor-form-checker.onrender.com

# File Upload Limits (conservative for 512MB RAM environments like Render free tier)
MAX_FILE_SIZE_MB=25  # Reduced from 50MB to prevent memory exhaustion
MAX_VIDEO_DURATION_SECONDS=60  # Reduced from 300s to prevent long processing

# Video Processing Performance Settings (optimized for low-memory servers)
FRAME_SKIP_RATE=8  # Process every Nth frame (higher = faster, uses less memory)
MAX_FRAMES_TO_ANALYZE=200  # Maximum frames to process (reduced to save memory)
VIDEO_RESIZE_WIDTH=480  # Smaller resize to save memory (was 640)
MIN_FRAMES_FOR_ANALYSIS=20  # Minimum frames needed before early termination

# Application Settings
LOG_LEVEL=INFO
