# FitMentor AI Environment Variables

# EmailOctopus API Configuration
EMAIL_OCTOPUS_API_KEY=your_api_key_here
EMAIL_OCTOPUS_LIST_ID=your_list_id_here

# API Configuration
ALLOWED_ORIGINS=http://localhost:5173,https://fitmentor-form-checker.onrender.com

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_VIDEO_DURATION_SECONDS=300

# Video Processing Performance Settings
FRAME_SKIP_RATE=6  # Process every Nth frame (higher = faster, lower = more accurate)
MAX_FRAMES_TO_ANALYZE=300  # Maximum frames to process (prevents very long processing times)
VIDEO_RESIZE_WIDTH=640  # Resize video width for faster processing (0 = no resize)
MIN_FRAMES_FOR_ANALYSIS=30  # Minimum frames needed before early termination

# Application Settings
LOG_LEVEL=INFO
